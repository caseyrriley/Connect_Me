<h1>Active connections</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @connections.each do |connection| %>
      <tr>
        <td><%= connection.name %></td>
        <td><%= button_to 'Show', connection %></td>
        <td><%= link_to 'Edit', edit_connection_path(connection) %></td>
        <td><%= button_to 'Destroy', connection, data: {:confirm =>'Are you sure?'},:method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

